#!/usr/bin/env bash

file=$2

# clean the path
sed -E -e 's/\.\/targetVar/targetVar/g' \
    -e 's/at targetVar\.chpl.*//' \
    $file > $file.tmp
mv $file.tmp $file

# clean garbage values
sed -E -e 's/myFormal=[0-9][0-9][0-9]+/myFormal=uninit/' $file > $file.tmp
mv $file.tmp $file

# remove empty lines and space
sed -e '/^[[:space:]]*$/d' -e 's/[[:space:]]*$//' $file > $file.tmp
mv $file.tmp $file
